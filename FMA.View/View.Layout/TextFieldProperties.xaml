<UserControl x:Class="FMA.View.TextFieldProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:properties="clr-namespace:FMA.View.Properties"
             xmlns:view="clr-namespace:FMA.View"
             xmlns:contracts="clr-namespace:FMA.Contracts;assembly=FMA.Contracts"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../View.Common/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="Path">
                <Setter Property="Width" Value="18" />
                <Setter Property="Height" Value="18" />
                <Setter Property="Fill" Value="Black" />
                <Setter Property="Stretch" Value="Uniform" />
            </Style>
            <Style BasedOn="{StaticResource {x:Type view:NumericUpDown}}" TargetType="view:NumericUpDown">
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
            <Style BasedOn="{StaticResource {x:Type ToggleButton}}" TargetType="ToggleButton">
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
        </Grid.Resources>


        <TextBlock Grid.Row="0"  Grid.Column="0" Text="{x:Static properties:Resources.FieldName}" />
        <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static properties:Resources.Text}" />
        <TextBlock Grid.Row="2"
                               Grid.Column="0"
                       Text="{x:Static properties:Resources.Position}" />
        <TextBlock Grid.Row="4" Grid.Column="0" Text="{x:Static properties:Resources.FontSize}" />
        <TextBlock Grid.Row="5"
                               Grid.Column="0"
                       Text="{x:Static properties:Resources.FontStyle}" />
        <TextBlock Grid.Row="8"
                               Grid.Column="0"
                       Text="{x:Static properties:Resources.FontName}" />

        <TextBlock Grid.Row="0" Grid.Column="1" Margin="4"
                                           VerticalAlignment="Center"
                                           Text="{Binding FieldName}" />
        <TextBox Grid.Column="1" Grid.Row="1"
                                         Margin="4"
                                         AcceptsReturn="True"
                                         Text="{Binding Value,
                                                        UpdateSourceTrigger=PropertyChanged}" />
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
            <view:NumericUpDown Value="{Binding TopMargin}" />
            <view:NumericUpDown  Value="{Binding LeftMargin}" />
        </StackPanel>

        <view:NumericUpDown Grid.Column="1" Grid.Row="4"
                                Margin="4"
                                                    Minimum="1"
                                                    Value="{Binding FontSize}" />
        <StackPanel Grid.Column="1" Grid.Row="5" Orientation="Horizontal">
