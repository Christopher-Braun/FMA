                     MinWidth="100"
                     Margin="4,8,8,0"
                     BorderBrush="CadetBlue"
                     BorderThickness="1,1,1,0"
                     ItemsSource="{Binding SelectedMaterialProvider.MaterialChilds}"
                     SelectionMode="Extended"
                     SnapsToDevicePixels="True">
