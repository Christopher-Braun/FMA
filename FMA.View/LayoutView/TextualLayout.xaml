                                                      Margin="4"
                                                      Value="{Binding MaxLength}" />

                                <common:NumericUpDown Grid.Row="8"
                                                      Grid.Column="0"
                                                      Grid.ColumnSpan="2"
                                                      Margin="4"
                                                      Value="{Binding MaxRows}" />

